{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "NodeNext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "sourceMap": true,
    "strict": true
  },
  "include": ["./src/**/*.ts", "./tests/**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
}
