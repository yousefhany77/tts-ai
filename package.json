{
  "name": "@yousefhany77/tts-ai",
  "version": "0.0.0-development",
  "description": "A project template to bootstrap NPM package with Typescript",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yousefhany77/tts-ai.git"
  },
  "homepage": "https://github.com/yousefhany77/tts-ai",
  "bugs": "https://github.com/yousefhany77/tts-ai/issues",
  "author": {
    "name": "yousefhany77",
    "email": "contact@yousefhany77.com",
    "url": "https://youssefhany.dev"
  },
  "keywords": [
    "typescript-template",
    "npm-boilerplate",
    "semantic-release-boilerplate"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier --write .",
    "lint": "eslint ./src/  --fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.2.2",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "semantic-release": "^23.0.2",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "docs",
                "section": "Documentation Changes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "concat-audio-buffers": "^1.0.0",
    "dotenv-cli": "^7.3.0",
    "p-limit": "^5.0.0",
    "zod": "^3.22.4",
    "zod-validation-error": "^3.0.0"
  },
  "peerDependencies": {
    "@google-cloud/text-to-speech": "^5.0.2",
    "openai": "^4.26.0"
  }
}
